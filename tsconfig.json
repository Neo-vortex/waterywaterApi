{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
